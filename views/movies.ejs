<%-include ('header');-%>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th colspan="3">action</th>

            </tr>
        </thead>
        <tbody>
            <% if(data.length){ for(var i=0; i< data.length; i++) {%>
                <tr>
                    <th scope="row">
                        <% (i+1) %>
                            <%= data[i]._id%>
                    </th>
                    <td>
                        <%= data[i].name%>
                    </td>
                    <td>
                        <a href="/api/movies/<%= data[i]._id%>/edit" class="btn btn-sm btn-info">Edit <i
                                class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                    <td>
                        <a href="/api/movies/<%= data[i]._id%>/show" class="btn btn-sm btn-primary">Show <i
                                class="fa-solid fa-binoculars"></i></a>

                    </td>
                    <td>
                        <a href="/api/movies/delete/<%= data[i]._id%>" class="btn btn-sm btn-danger">Delete <i
                                class="fa-solid fa-trash"></i></a>

                    </td>
                </tr>
                <% } }else{ %>
                    <tr>
                        <td colspan="3">No user</td>
                    </tr>
                    <% } %>

        </tbody>
    </table>





    <%-include ('footer');-%>